{% extends 'base.html.twig' %}

{% block title %}List{% endblock %}

{% block body %}
{% for flashMessage in app.flashes('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
  <div class="multy_table">
    <table>
      <thead>
        <tr>
          <th>Students List</th>
          <th></th>
        </tr>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
        </tr>
      </thead>
      <tbody>
      {% for student in student_data %}
        <tr>
          <td>{{ student.firstname }}</td>
          <td>{{ student.lastname }}</td>
        </tr>    
      {% endfor %}

      </tbody>
    </table>
  </div>

  <div class="multy_table">
    <table>
      <thead>
        <tr>
          <th>Courses List</th>
        </tr>
      </thead>
      <tbody>
      {% for course in course_data %}
        <tr>
          <td>{{ course.coursename }}</td>
        </tr>    
      {% endfor %}

      </tbody>
    </table>
  </div>

  <div class="multy_table">
    <table>
      <thead>
        <tr>
          <th>Classes List</th>
        </tr>
      </thead>
      <tbody>
      {% for class in class_data %}
        <tr>
          <td>{{ class.classname }}</td>
        </tr>    
      {% endfor %}

      </tbody>
    </table>
  </div>
{% endblock %}

{% block bottomrighBTN %}
<div style="position: fixed; right: 30px; bottom: 20px">
    <a href="add_student" class="btn btn-primary">Add Student</a>
    <a href="add_class" class="btn btn-primary">Add Class</a>
    <a href="add_course" class="btn btn-primary">Add Course</a>
</div>
{% endblock %}