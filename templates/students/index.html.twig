{% extends 'base.html.twig' %}

{% block title %}Students{% endblock %}

{% block body %}

<div class="table-wrapper">
  <table>
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Date Of Birth</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
  {% for student in students_data %}
    <tr>
      <td>{{ student.id }}</td>
      <td>{{ student.firstname }}</td>
      <td>{{ student.lastname }}</td>
      <td>{{student.dateofbirth|date('Y-m-d') }}</td>
      <td>{{ student.image }}</td>
    </tr>    
  {% endfor %}

  </tbody>
</table>
</div>

{% endblock %}

{% block bottomrighBTN %}
    <div style="position: fixed; right: 30px; bottom: 20px">
      <a href="edit_student" class="btn btn-primary">Edit</a>
      <a href="#" class="btn btn-primary">Details</a>
      <a href="delete_student" class="btn btn-primary">Delete</a>
    </div>
{% endblock %}
